<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundtwo"
    >

    <!--<ImageView-->
        <!--android:id="@+id/imgView"-->
        <!--android:layout_width="100dp"-->
        <!--android:layout_height="100dp"-->
        <!--android:layout_gravity="top|center"-->
        <!--android:src="@drawable/logo" />-->
    <zhang.feng.com.eatwhat.ImageCircleView
        android:id="@+id/imgView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center|top"
        android:src="@drawable/logo"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">


        <EditText
            android:id="@+id/userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:hint="用户名："
            android:maxLength="20"
            android:paddingLeft="30dp"
            android:textSize="30dp"
            android:background="@drawable/setbbr_bg"/>

        <ImageView
            android:id="@+id/user_ico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:src="@drawable/userico" />
        <ImageView
            android:id="@+id/user_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/userName"
            android:layout_alignParentBottom="true"
            android:src="@drawable/key" />


        <EditText
            android:id="@+id/passWord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:hint="密码："
            android:maxLength="20"
            android:textSize="30dp"
            android:paddingLeft="30dp"
            android:background="@drawable/setbbr_bg"/>
        <ImageView
            android:id="@+id/password_ico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="30dp"
            android:src="@drawable/key" />


        <ImageView
            android:id="@+id/password_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/passWord"
            android:src="@drawable/userico" />
    </RelativeLayout>
    <Button
        android:id="@+id/log"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:text="登录"
        android:background="@drawable/button_clicked"/>
    <CheckBox
        android:id="@+id/remenber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="40dp"
        android:checked="true"
        android:text="保存密码"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/forget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="忘记密码"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="@drawable/setbbr_bg"/>
        <Button
            android:id="@+id/newUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:text="新用户注册"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="@drawable/setbbr_bg"/>
    </LinearLayout>
</LinearLayout>