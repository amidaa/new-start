<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.WalkStepFragment">
    <zhang.feng.com.eatwhat.customview.ProgressView
        android:id="@+id/walk_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/walk_today"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/today"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/walk_progress"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/stepArrayButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:text="所有步数" />

    <TextView
        android:id="@+id/timeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:textSize="25sp"
        android:textColor="@android:color/background_dark"
        android:layout_alignParentRight="true"
        android:text="所有步数" />



    <TextView
        android:id="@+id/stepTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/walk_progress"
        android:layout_centerHorizontal="true"
        android:text="0"
        android:layout_marginTop="10dp"
        android:background="@color/shallow_blue"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/stepArrayTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stepTextView"
        android:layout_centerHorizontal="true"
        android:text="Hello World!"
        android:textSize="15sp" />
    <TextView
        android:id="@+id/cal_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/cal"
        android:layout_alignParentBottom="true"
        android:textColor="@color/colorPrimaryDark"/>



</RelativeLayout>