<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/item_selector">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">
        <!--头像-->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/head_portrait"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_weight="0"
            android:src="@mipmap/head_e"/>
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_weight="1">
           <TextView
               android:id="@+id/issue_author"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="huahua"
               android:layout_weight="1"/>
           <!--发布时间-->
           <TextView
               android:id="@+id/issue_date"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/issue_date" />
       </LinearLayout>
        <!--点击图标实现关注用户-->
        <ImageButton
            android:id="@+id/attention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:src="@mipmap/moodico"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!--发表的文章-->
        <TextView
            android:id="@+id/article"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/issue_content"/>
        <!--发布的图片或者视频-->
        <GridView
            android:id="@+id/issue_photo"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="8dp"
            android:numColumns="5"
            android:columnWidth="60dp"
            android:horizontalSpacing="6dp"
            android:descendantFocusability="blocksDescendants"
            android:focusable="true" />

        <com.zhuang.likeviewlibrary.LikeView
            android:id="@+id/like_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:like_canCancel="true"
            app:like_iconSize="18dp"
            app:like_hasFly="false"
            app:like_textSize="12dp"/>
        <!--like_canCancel是控制是否可以点赞，第一次点击新增点赞，第二次点击取消点赞
        like_hasFly是控制是否有图标飞出-->
    </LinearLayout>

</LinearLayout>